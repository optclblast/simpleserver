postgres:
	docker run --name postgres -p 5432:5432 -e POSTGRES_USER=username -e POSTGRES_PASSWORD=password -d postgres:12-alpine

createdb:
	docker exec -it postgres createdb --username=username --owner=username dbb

dropdb:
	#!/bin/sh docker exec -it postgres dropdb dbb

migrateup:
	migrate --path db/migration --database "postgresql://username:password@localhost:5432/dbb?sslmode=disable" --verbose up

migratedown:
	migrate --path db/migration --database "postgresql://username:password@localhost:5432/dbb?sslmode=disable" --verbose down
	
.PHONY: postgres createdb dropdb migrateup migratedown